<h1 class="text-center">CoffeeCocktails</h1>


<div class="container-fluid">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <% unless cocktail.photo.file.nil? %>
            <%= cl_image_tag cocktail.photo, height: 200, width: 300, crop: :fill %>
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <% else %>
            <%= cl_image_tag("klkt9dq4nrnwny4wco6b",
              width: 300, height: 200, crop: :fill, :transformation => {:effect => "blur:500", :opacity => 50}) %>
              <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
